  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug and Build",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "program": "${workspaceFolder}\\dist\\server.js",
      "preLaunchTask": "lint and build"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug without Build",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}\\dist\\server.js",
    }
  ]
}