{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@core": ["src/core/index.ts"],
      "@modules/*": ["src/modules/*/index.ts"],
      "@services/*": ["src/services/*/index.ts"],
      "@mappers/*": ["src/mappers/*"],
      "@config/*": ["src/config/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/config/*.json",
    "./server.ts"
  ]
}